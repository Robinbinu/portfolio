---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Projects",
    path: "/projects",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];

---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg font-bold text-slate-800 ">
          <span class="text-white bg-black px-1">Michael</span>RobinK
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-5 h-5 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-4 ">
          {menuitems.map((item) => (
            <li>
              <a
                href={item.path}
                class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                <span>{item.title}</span>
              </a>
            </li>
          ))}
        </ul>
      </MenuItems>
    </Astronav>
    <!--TODO-->
    <!-- <div class="hidden lg:flex items-center gap-4">
      <a href="#">Log in</a>
      <Link href="#" size="md">Sign up</Link>
    </div> -->
  </header>
  <script is:inline>
    {darkModeScript}
  </script>
</Container>

