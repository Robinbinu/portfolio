---
import { Picture } from "astro:assets";
import heroImage from "@/assets/me.jpeg";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class='hidden md:block'>
    <Picture
      src={heroImage}
      class="rounded-full shadow-lg object-cover"
      alt="Developer illustration"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div  class="py-6 md:order-1">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Michael Robin K
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Flutter & Web Developer | Passionate about crafting intuitive digital experiences.
      Proficient in cross-platform apps, real-time systems, and modern UI/UX.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://github.com/Robinbinu"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxl-github" />
        GitHub
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://linkedin.com/in/michaelrobink"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-linkedin-square" />
        LinkedIn
      </Link>
    </div>
  </div>
</main>
